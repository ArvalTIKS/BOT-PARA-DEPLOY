# Deploy-specific environment variables for WhatsApp service
NODE_ENV=production
EMERGENT_ENV=deploy

# WhatsApp connection optimization for deploy
WA_CONNECT_TIMEOUT=180000
WA_KEEP_ALIVE_INTERVAL=60000
WA_REQUEST_TIMEOUT=45000
WA_MAX_RETRIES=5

# Session persistence (deploy only)
WA_PERSIST_SESSIONS=true
WA_SESSION_BACKUP=true
WA_CLEANUP_ON_FAILURE=false

# Logging configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3001
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Performance settings
MAX_CONCURRENT_CONNECTIONS=100
MESSAGE_QUEUE_SIZE=1000
PROCESS_BATCH_SIZE=10